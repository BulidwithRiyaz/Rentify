<% layout("layouts/boilerplate") %>

<div class="row justify-content-center mt-4">
  <div class="col-lg-8 col-md-10">
    <h3 class="mb-4 text-center">Your Place</h3>
    
    <div class="card ">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listed image">
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text fw-bold">
          â‚¹ <%= listing.price.toLocaleString("en-IN") %> / Night
        </p>
        <p class="card-text text-muted">
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-between align-items-center mt-3">
      <a href="/listings/<%= listing._id %>/edit" 
         class="btn btn-dark rounded-pill px-4 py-2 list-btn mb-3">
         Edit
      </a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="m-0">
        <button class="btn btn-danger rounded-pill px-4 py-2 mb-3">Delete</button>
      </form>
    </div>
  </div>
</div>
